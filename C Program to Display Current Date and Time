#include <stdio.h>
#include <time.h>

int main() {
    time_t now;
    struct tm *current;

    time(&now);

    current = localtime(&now);

    printf("Current Date and Time:\n");
    printf("%02d-%02d-%04d  %02d:%02d:%02d\n",
           current->tm_mday,
           current->tm_mon + 1,
           current->tm_year + 1900,
           current->tm_hour,
           current->tm_min,
           current->tm_sec
    );

    return 0;
}
